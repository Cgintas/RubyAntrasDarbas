
class Stopwatch
 
  def initialize()
    @start = Time.now
  end
   
  def elapsed_time
    now = Time.now
    elapsed = now - @start
    puts 'Pradzia: ' + @start.to_s
    puts 'Dabartinis: ' + now.to_s
    puts 'Praejas laikas: ' +  elapsed.to_s + ' seconds'
    elapsed.to_s
  end
   
end

#6Sekundes

s = Stopwatch.new
sleep(6)
puts s.elapsed_time
